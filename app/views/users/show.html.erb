<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
  <div class="col-md-8">
    <% if @user.followings.any? %>
      <h3>followings (<%= User.find(params[:id]) %>)</h3>
      <ol class="microposts">
        <%= render @followings %>
      </ol>
    <% end %>
  </div>  
</div>